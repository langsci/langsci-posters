%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% headline colors and fonts
\setbeamercolor{headline}{fg=white,bg=lsp-darkblue} 
 

% footline colors and fonts
\setbeamercolor{footline}{fg=white,bg=lsp-darkblue}
% \setbeamerfont{footline}{fg=white,size=\normalsize}

% poster background, body colors, and fonts
\setbeamercolor*{normal text}{fg=black,bg=lsp-lightblue}

% block environment
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamercolor*{block title}{fg=white,bg=black}
\setbeamerfont{block title}{size=\large,series=\bf} 
    
\setbeamertemplate{itemize items}{{\usebeamercolor[bg]{headline}\scalebox{.6}{\bf\textrangle}}}
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[ht=5ex,dp=1ex,center,rounded=false,shadow=false,leftskip=.6cm,colsep*=.75ex]{headline}%
    \usebeamerfont*{block title} 
  \begin{tabular}{p{22.04cm}r}
  \insertblocktitle&
    {\usebeamercolor[bg]{block title}\raisebox{1.37cm}{\rule{14cm}{.4cm}}}
  \end{tabular}

  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=false,shadow=false,leftskip=1cm,colsep*=.75ex,sep=2ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.25\paperwidth}
        \vskip8.5ex
        \hskip14ex
        \raggedright
         \includegraphics[height=24ex,keepaspectratio]{langsci_logo_nocolor.pdf}
      \end{column}
      \begin{column}{.07\paperwidth}
      \end{column}
      \begin{column}{.75\paperwidth}
        \hskip2ex
        \vskip8ex
        \raggedright 
	\parbox{35cm}{
        \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[1.2ex]}
        \usebeamercolor{author in headline}{\color{fg}\Large{\insertauthor}\\[.8ex]}
        \usebeamercolor{auhor in headline}{\color{fg}\Large{\insertinstitute}\\[1ex]}     
	}

      \end{column}

    \end{columns}
        \vskip4ex
  \end{beamercolorbox}
}

